<mujoco model="CircularTrampoline">
  <include file="scene.xml"/>
  <option timestep="0.001" solver="CG" tolerance="1e-6" integrator="implicitfast"/>
  <size memory="10M"/>
  <visual>
    <map stiffness="100"/>
  </visual>
  <default>
    <default class="wall">
      <geom type="plane" size=".5 .5 .05"/>
    </default>
  </default>
  <worldbody>
    <body pos="0 0 1.5">
      <freejoint/>
      <geom type="sphere" size=".1"/>
    </body>
    <!-- Create a circular trampoline using a mesh -->
    <flexcomp type="mesh" name="plate" dim="2" pos="0 0 1" radius=".001" mass="10">
      <contact condim="3" solref="0.01 1" solimp=".95 .99 .0001"/>
      <edge equality="false" damping="10"/>
      <elasticity young="3e5" poisson="0" thickness="1e-2"/>
      <!-- Pin only the outer ring -->
      <pin range="13 24"/>
      <vertex>
        0.75 0.75 0.0
        <!-- Inner ring -->
        1.05 0.75 0.0
        1.0 0.9 0.0
        0.9 1.0 0.0
        0.75 1.05 0.0
        0.6 1.0 0.0
        0.5 0.9 0.0
        0.45 0.75 0.0
        0.5 0.6 0.0
        0.6 0.5 0.0
        0.75 0.45 0.0
        0.9 0.5 0.0
        1.0 0.6 0.0
        <!-- Outer ring (pinned) -->
        1.35 0.75 0.0
        1.25 1.05 0.0
        1.05 1.25 0.0
        0.75 1.35 0.0
        0.45 1.25 0.0
        0.25 1.05 0.0
        0.15 0.75 0.0
        0.25 0.45 0.0
        0.45 0.25 0.0
        0.75 0.15 0.0
        1.05 0.25 0.0
        1.25 0.45 0.0
      </vertex>
      <element>
        <!-- Center to inner ring -->
        0 1 2
        0 2 3
        0 3 4
        0 4 5
        0 5 6
        0 6 7
        0 7 8
        0 8 9
        0 9 10
        0 10 11
        0 11 12
        0 12 1
        <!-- Inner ring to outer ring -->
        1 13 14
        1 14 2
        2 14 15
        2 15 3
        3 15 16
        3 16 4
        4 16 17
        4 17 5
        5 17 18
        5 18 6
        6 18 19
        6 19 7
        7 19 20
        7 20 8
        8 20 21
        8 21 9
        9 21 22
        9 22 10
        10 22 23
        10 23 11
        11 23 24
        11 24 12
        12 24 13
        12 13 1
      </element>
    </flexcomp>
    <!-- Add a visual frame for the trampoline -->
    <geom type="cylinder" pos="0.75 0.75 0.99" size="0.75 0.01" rgba="0.2 0.2 0.2 1"/>
  </worldbody>
</mujoco>